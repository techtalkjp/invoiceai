{
  "name": "invoiceai",
  "version": "1.0.0",
  "description": "AI-powered invoice management for freelancers and small teams",
  "main": "index.js",
  "type": "module",
  "bin": {
    "invoiceai": "./src/cli-entry.ts"
  },
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build",
    "start": "react-router-serve ./build/server/index.js",
    "cli:freee": "tsx src/list-invoices.ts",
    "cli:auth": "tsx src/auth.ts",
    "cli:google": "tsx src/google-auth.ts",
    "cli:invoice": "tsx src/create-invoice.ts",
    "cli:activity": "tsx src/sync-activities.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "cli:typecheck": "tsc -p tsconfig.json",
    "lint": "biome lint .",
    "format": "prettier . --check --experimental-cli",
    "format:fix": "prettier . --write --experimental-cli",
    "typecheck": "react-router typegen && tsc",
    "validate": "run-p format lint && run-p typecheck",
    "db:push": "atlas schema apply --env local --auto-approve",
    "db:push:production": "dotenv -e .env.production -- atlas schema apply --env production --auto-approve",
    "db:types": "kysely-codegen --dialect libsql --camel-case --url file:db/local.db --out-file app/lib/db/types.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.28.2",
  "dependencies": {
    "@ai-sdk/google": "3.0.20",
    "@base-ui/react": "1.1.0",
    "@conform-to/react": "1.16.0",
    "@conform-to/zod": "1.16.0",
    "@fontsource-variable/noto-sans": "5.2.10",
    "@holiday-jp/holiday_jp": "2.5.1",
    "@libsql/client": "0.17.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@react-pdf/renderer": "4.3.2",
    "@react-router/node": "7.13.0",
    "@react-router/serve": "7.13.0",
    "@tabler/icons-react": "3.36.1",
    "@vercel/react-router": "1.2.5",
    "ai": "6.0.67",
    "better-auth": "1.4.18",
    "cac": "6.7.14",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "dayjs": "1.11.19",
    "dotenv": "17.2.3",
    "isbot": "5.1.34",
    "kysely": "0.28.10",
    "kysely-libsql": "0.7.1",
    "lucide-react": "0.563.0",
    "pdf-lib": "1.17.1",
    "radix-ui": "latest",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-router": "7.13.0",
    "shadcn": "3.8.0",
    "tailwind-merge": "3.4.0",
    "ts-pattern": "5.9.0",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3",
    "vaul": "1.1.2",
    "zod": "4.3.6",
    "zustand": "5.0.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@react-router/dev": "7.13.0",
    "@tailwindcss/vite": "4.1.13",
    "@types/node": "25.1.0",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "cc-hooks-ts": "2.1.27",
    "dotenv-cli": "11.0.0",
    "kysely-codegen": "0.19.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.8.1",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "react-router-auto-routes": "0.7.1",
    "tailwindcss": "4.1.13",
    "tsx": "4.21.0",
    "vite": "7.1.7",
    "vite-plugin-devtools-json": "1.0.0",
    "vite-tsconfig-paths": "6.0.5",
    "vitest": "4.0.18"
  }
}
